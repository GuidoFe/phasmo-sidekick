{
    "compilerOptions": {
        "outDir": "../dist",
        "allowJs": true,
        "target": "es5",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "module": "commonjs",
        "baseUrl": ".",
        "resolveJsonModule": true,
        "types": [
            "color"
        ],
        "paths": {
            "@modules": ["modules"],
            "@commands": ["commands"],
            "@challenges/*": ["../challenges/*"],
            "@utils": ["utils.js"],
            "@constants": ["./constants"],
            "@index": ["bot.ts"]
        }
    },
    "incude": ["./**/*"]
}
